<% if !scheduled?(UserRegularSchedule.find_by_user_id(current_user.id), @day) %>
	<%= link_to image_tag("dont_deliver2.png", :class => "schedule_button"), :url => { :controller => "users", :action => "user_deliver_today", :day => @day }, :complete => visual_effect(:appear, @day, {:duration => 0.5, :from => 0.5, :to => 1.0 }), :remote => true %>
<% else %>
	<%= link_to image_tag("deliver2.png", :class => "schedule_button"), :url => { :controller => "users", :action => "user_no_delivery_today", :day => @day }, :complete => visual_effect(:appear, @day, {:duration => 0.5, :from => 0.5, :to => 1.0 }), :remote => true %>
<% end %>
