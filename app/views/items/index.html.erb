<div id="item_container">	
	<div class="item_title">
		All Items:
	</div>
	<div class="create_new_item_link">
		<%= link_to "Create New Item", new_item_path %>
	</div>
	<table class="editing_table" cellspacing=15>
		<tr>
			<td nowrap="true">
				<div class="editing_item_header">
					Current Image
				</div>
			</td>
			<td>
				<div class="editing_item_header">
					Item Name
				</div>
			</td>
			<td>
				<div class="editing_item_header">
					Item Description
				</div>
			</td>
			<td nowrap="true">
				<div class="editing_item_header">
					Item Type
				</div>
			</td>
			<td>
				<div class="editing_item_header">
					Calories
				</div>
			</td>
		</tr>
		<% @items.each do |item| %>
			<tr>
				<td>
					<%= image_tag(item.photo.url, :class => "admin_item_image") %>
				<td>
					<div class="item_name">
						<b><%= item.name %></b>
					</div>
				</td>
				<td>
					<div class="item_name">
						<%= item.description %>
					</div>
				</td>
				<td>
					<div class="item_name">
						<% @item_type = item.item_type %>
						<% if @item_type.upcase == "ENTREE" %>
							<font color="#d35511">
						<% elsif @item_type.upcase == "DESSERT" %>
							<font color="#4711d3">
						<% end %>
								<%= item.item_type %>
							</font>
					</div>
				</td>
				<td>
					<div class="item_name">
						<%= item.calories %>
					</div>
				</td>
				<td>
					<div class="edit_item_link">
						<%= link_to "Edit", edit_item_path(item) %>
					</div>
				</td>
				<td>
					<div class="edit_item_link">
						<%= link_to "Delete", { :controller => "items", :action => "destroy", :id => item.id }, :confirm => "Are you sure you want to delete the item #{item.name}?", :method => :delete %>
					</div>
				</td>
			</tr>
		<% end %>
	</table>
</div>
